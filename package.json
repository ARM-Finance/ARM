{
  "name": "arm-finance",
  "version": "0.0.1",
  "private": true,
  "description": "ARM Finance monorepo",
  "main": "index.js",
  "workspaces": [
    "ethereum"
  ],
  "scripts": {
    "start": "lerna run start --parallel",
    "compile": "lerna run compile",
    "clean": "lerna run clean",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "update-version": "lerna publish --skip-git --skip-npm --force-publish '*'",
    "check-packages": "yarn clean && yarn compile && yarn test && yarn lint",
    "publish-packages": "",
    "bootstrap": "lerna bootstrap",
    "dev": "lerna run dev --parallel --no-bail",
    "client:dev-server": "lerna run client:dev-server --no-bail",
    "client:dev": "lerna run client:dev --no-bail",
    "client:build": "lerna run build:webpack",
    "server:dev": "lerna run server:dev --no-bail"
  },
  "keywords": ["ARM Finance", "ARM"],
  "author": "Andrea Lepidio",
  "license": "Unlicense",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ARM-Finance/ARM.git"
  },
  "devDependencies": {
    "husky": "^1.1.2",
    "lerna": "^3.4.3"
  }
}
