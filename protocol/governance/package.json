{
  "name": "@arm/governance",
  "version": "1.0.0",
  "description": "Solidity smart contracts for the ARM governance token",
  "license": "MIT",
  "author": "Chris Piatt (@chpiatt)",
  "contributors": [
    "lepidotteri"
  ],
  "scripts": {
    "hardhat": "hardhat node --no-deploy --show-accounts",
    "accounts": "hardhat accounts",
    "compile": "hardhat compile",
    "build:sol": "hardhat compile && sol2uml contracts",
    "script": "sh -c 'npx ./scripts/${0}.js'",
    "script:latest": "sh -c 'npx hardhat run ./scripts/${0}.js'",
    "docs": "npx docify.ts",
    "test": "hardhat test",
    "test:gas": "export REPORT_GAS=true && hardhat test",
    "test:spec": "hardhat test ./test/spec/*.spec.js",
    "test:spec:gas": "export REPORT_GAS=true && hardhat test ./test/spec/*.spec.js",
    "deploy": "hardhat deploy",
    "deploy:reset": "hardhat deploy --reset",
    "deploy:tag": "sh -c 'hardhat deploy --tags ${0}'",
    "deploy:local": "hardhat deploy --network localhost",
    "deploy:local:tag": "sh -c 'hardhat deploy --network localhost --tags ${0}'",
    "deploy:rinkeby": "hardhat deploy --network rinkeby",
    "deploy:rinkeby:reset": "hardhat deploy --network rinkeby --reset",
    "deploy:rinkeby:tag": "sh -c 'hardhat deploy --network rinkeby --tags ${0}'",
    "deploy:rinkeby:tag:reset": "sh -c 'hardhat deploy --network rinkeby --tags ${0} --reset'",
    "deploy:prod": "hardhat deploy --network mainnet",
    "deploy:prod:reset": "hardhat deploy --network mainnet --reset",
    "deploy:prod:tag": "sh -c 'hardhat deploy --network mainnet --tags ${0}'",
    "deploy:prod:tag:reset": "sh -c 'hardhat deploy --network mainnet --tags ${0} --reset'",
    "logs": "hardhat remove-logs",
    "clean": "hardhat clean",
    "verify": "hardhat etherscan-verify --api-key $ETHERSCAN_API_KEY",
    "flatten": "hardhat flatten",
    "flatten:out": "mkdir -p flattened && hardhat flatten > ./flattened/Contract.sol",
    "mythx:quick": "mythx analyze -y --mode quick --wait ./contracts/*.sol",
    "mythx:standard": "mythx analyze -y --mode standard --async ./contracts/*.sol",
    "mythx:deep": "mythx analyze -y --mode deep --async ./contracts/*.sol"
  },
  "dependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "ethereum-waffle": "^3.2.0",
    "ethereumjs-util": "^7.0.7",
    "ethers": "^5.0.19",
    "hardhat": "^2.0.3",
    "hardhat-deploy": "^0.7.0-beta.28",
    "hardhat-deploy-ethers": "^0.3.0-beta.5",
    "hardhat-gas-reporter": "^1.0.1",
    "mocha": "^8.2.1",
    "solidity-docgen": "^0.5.8"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-etherscan": "^2.0.1",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.0.4",
    "@types/node": "^14.14.7",
    "chai": "^4.2.0",
    "hardhat-abi-exporter": "^2.0.6",
    "hardhat-log-remover": "^2.0.0",
    "sol2uml": "^1.1.18"
  }
}
